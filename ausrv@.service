[Unit]
Description=AuSrv Server Service
After=network.target
StartLimitBurst=3
StartLimitIntervalSec=300
StartLimitAction=none
OnFailure=ausrv-send-notification@%i.service

[Service]
Type=forking
KillMode=process
WorkingDirectory=/srv/ausrv/server-%i
ExecStartPre=/usr/bin/ausrv-script server_tmux_install %i
ExecStartPre=/usr/bin/ausrv-script send_notification_start_initialized %i
ExecStart=/usr/bin/tmux -f /tmp/%u-%i-tmux.conf -L %u-%i-tmux.sock new-session -d -s AuSrv '/usr/bin/impostor-server'
ExecStartPost=/usr/bin/ausrv-script send_notification_start_complete %i
ExecStop=/usr/bin/ausrv-script send_notification_stop_initialized %i
ExecStop=/usr/bin/tmux -L %u-%i-tmux.sock send-keys -t AuSrv.0 C-c
ExecStopPost=/usr/bin/rm /tmp/%u-%i-tmux.conf
ExecStopPost=/usr/bin/rm /tmp/%u-%i-tmux.log
ExecStopPost=/usr/bin/ausrv-script send_notification_stop_complete %i
TimeoutStartSec=infinity
TimeoutStopSec=120
RestartSec=10
Restart=on-failure

[Install]
WantedBy=default.target
